<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="work.xingbili.mybatisplus.mapper.UserMapper">

	
	<!-- 根据id表全字段更新 -->
	<update id="updateByIdWithOptimistiLock" parameterType="work.xingbili.mybatisplus.entity.User">
		UPDATE user
		set 
		 id = #{id},
		 name = #{name},
		 age = #{age},
		 email = #{email}
		WHERE id = #{id, jdbcType=BIGINT} AND version = #{version}
	</update>
</mapper>
